<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Add your other views here -->

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/removeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/createrTextView"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000"
                    android:background="@drawable/cell_shape"
                    android:textSize="13sp"
                    android:text="Creator" />

                <TextView
                    android:id="@+id/modulenameTextView"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000"
                    android:background="@drawable/cell_shape"
                    android:textSize="13sp"
                    android:text="Module Name" />

                <TextView
                    android:id="@+id/bugtitleTextView"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="#000"
                    android:background="@drawable/cell_shape"
                    android:textSize="13sp"
                    android:text="Bug Title" />

                <TextView
                    android:id="@+id/devicedetailsTextView"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="#000"
                    android:background="@drawable/cell_shape"
                    android:textSize="13sp"
                    android:text="Device Details" />

                <TextView
                    android:id="@+id/statusTextView"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="#000"
                    android:background="@drawable/cell_shape"
                    android:textSize="13sp"
                    android:text="Status" />

                <TextView
                    android:id="@+id/createdatTextView"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="#000"
                    android:background="@drawable/cell_shape"
                    android:textSize="13sp"
                    android:text="Created At" />

                <TextView
                    android:id="@+id/updatedatedTextView"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="#000"
                    android:background="@drawable/cell_shape"
                    android:textSize="13sp"
                    android:text="Updated At" />

            </TableRow>

            <!-- Add more TableRows and TextView elements as needed -->

        </TableLayout>

    </HorizontalScrollView>
</LinearLayout>


