<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_16"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="@dimen/dimen_16"
    android:layout_marginBottom="12dp"

    android:background="@color/gray_bg"
    app:cardCornerRadius="@dimen/dimen_16"
    app:cardElevation="@dimen/dimen_8"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_16">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/img_user"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/profilepicatcard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/creatername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:text=" Creater :Siddhant Hole"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/img_user"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/moduleimage"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/exam"
            app:layout_constraintStart_toStartOf="@id/creatername"
            app:layout_constraintTop_toBottomOf="@id/creatername"
            />

        <TextView
            android:id="@+id/moduletext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="@dimen/dimen_8"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Module name :xyz@1"
            android:textColor="@android:color/darker_gray"

            app:layout_constraintStart_toEndOf="@id/moduleimage"
            app:layout_constraintTop_toBottomOf="@id/creatername" />
        <ImageView
            android:id="@+id/bugimage"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ladybug"
            app:layout_constraintStart_toStartOf="@id/creatername"
            app:layout_constraintTop_toBottomOf="@id/moduletext"
             />
        <TextView
            android:id="@+id/bugtext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="@dimen/dimen_8"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Bug title :xyz@1"
            android:textColor="@android:color/darker_gray"

            app:layout_constraintStart_toEndOf="@id/bugimage"
            app:layout_constraintTop_toBottomOf="@id/moduletext" />

        <ImageView
            android:id="@+id/deviceimage"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/deviceeeeeeeee"
            app:layout_constraintStart_toStartOf="@id/creatername"
            app:layout_constraintTop_toBottomOf="@id/bugtext"
             />
        <TextView
            android:id="@+id/devicetext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="@dimen/dimen_8"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Device Name :xyz@1"
            android:textColor="@android:color/darker_gray"

            app:layout_constraintStart_toEndOf="@id/deviceimage"
            app:layout_constraintTop_toBottomOf="@id/bugtext" />
        <ImageView
            android:id="@+id/statusimage"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/checkccccc"
            app:layout_constraintStart_toStartOf="@id/creatername"
            app:layout_constraintTop_toBottomOf="@id/devicetext"
             />
        <TextView
            android:id="@+id/statusname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="@dimen/dimen_8"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Status :xyz@1"
            android:textColor="@android:color/darker_gray"

            app:layout_constraintStart_toEndOf="@id/statusimage"
            app:layout_constraintTop_toBottomOf="@id/devicetext" />
        <ImageView
            android:id="@+id/createdimage"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/bookkkk"
            app:layout_constraintStart_toStartOf="@id/creatername"
            app:layout_constraintTop_toBottomOf="@id/statusname"
           />
        <TextView
            android:id="@+id/createdname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="@dimen/dimen_8"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Created at :xyz@1"
            android:textColor="@android:color/darker_gray"

            app:layout_constraintStart_toEndOf="@id/createdimage"
            app:layout_constraintTop_toBottomOf="@id/statusname" />
        <ImageView
            android:id="@+id/updatedimage"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/exam11111"
            app:layout_constraintStart_toStartOf="@id/creatername"
            app:layout_constraintTop_toBottomOf="@id/createdimage"
            />
        <TextView
            android:id="@+id/updatedtext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="@dimen/dimen_8"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Updated at :xyz@1"
            android:textColor="@android:color/darker_gray"

            app:layout_constraintStart_toEndOf="@id/createdimage"
            app:layout_constraintTop_toBottomOf="@id/createdname" />


    </androidx.constraintlayout.widget.ConstraintLayout>
